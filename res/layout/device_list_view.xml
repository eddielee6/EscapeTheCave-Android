<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/deviceIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/half_vertical_margin"
        android:layout_marginLeft="@dimen/half_horizontal_margin"
        android:layout_marginRight="@dimen/half_horizontal_margin"
        android:layout_marginTop="@dimen/half_vertical_margin"
        android:background="@color/playerOneColour"
        android:contentDescription="@string/bluetooth_device"
        android:scaleType="fitCenter"
        android:src="@drawable/remote_display_picture" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deviceName"
            style="@style/LargeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_device" />

        <TextView
            android:id="@+id/connectionStatus"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_device_connection_status" />

    </LinearLayout>

	<ProgressBar
	    android:id="@+id/connectingSpinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
	    android:layout_marginLeft="@dimen/activity_horizontal_margin" />

</LinearLayout>